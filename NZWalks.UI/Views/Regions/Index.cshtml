@{
}
<h2 class="mt-3">Regions</h2>

<div class="d-flex justify-content-end mb-3">
    <a class="btn btn-info" asp-controller="Regions" asp-action="Add">Add Region</a>
</div>

<table class="table table-bordered ">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Code</th>
            <th> </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var walk in Model)
        {
            <tr>
                <td>@walk.Id</td>
                <td>@walk.Name</td>
                <td>@walk.Code</td>
                <td>
                    <div class="d-grid gap-2">
                        <a asp-controller="Regions" asp-action="Edit" asp-route-id="@walk.Id" class="btn btn-light">Edit</a>
                   </div>
                </td>
            </tr>
        }
    </tbody>
</table>